/* pages/register/index.wxss */
.container{
  width:100%;
  height:850px;
  position: absolute;
  background: linear-gradient(to bottom, #8ad9e5, #1f86ca);
}

.re_out{
  display: flex;
  justify-content: center;
  margin-top: 10%;
  margin-bottom: 5%;
}

.register{
  color:white;
  font-size:24px;
  font-weight: bold;
}

.txt_out{
  display: flex;
  justify-content: center;
  margin-bottom: 5%;
  margin-top: 5%;
}

.txt{
  color: white;
  font-size: 14px;
}

.input_out{
  display: flex;
  justify-content: center;
}

input{
  min-height:35px;
  font-size: 15px;
  font-weight: 500;
  border:1px solid rgb(255, 255, 255);
  border-radius: 3%;
  width: 250px;
}

.placeholder-style{
  color:#fff
}

picker{
  min-height:35px;
  font-size: 15px;
  font-weight: 500;
  border:1px solid rgb(255, 255, 255);
  border-radius: 3%;
  width: 250px;
}

.count_text{
  color: #fff;
  font-size: 14px;
}

.tui-picker-detail{
  color: #fff;
  font-size: 14px;
}

button{
  margin-top: 15%;
  background: -webkit-linear-gradient(left,rgb(53, 139, 238),rgb(76, 115, 221),rgb(53, 139, 238));
  border-radius: 98rpx;
  line-height: 25px;
  font-size: 14px;
  font-weight: 550;
  color: rgb(236, 241, 255);
}

 .select_box{
  background: #fff;
  width: 80%;
  margin: 30rpx auto;
  position: relative;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 30rpx;
  flex: 1;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
 }
 
 image{
  width:20px;
  height:20px;
 }

 .input{
   color:#fff;
   text-align: center;
 }