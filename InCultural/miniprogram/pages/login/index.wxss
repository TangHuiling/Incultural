/* pages/login/index.wxss */
.container{
  width:100%;
  height:700px;
  position: absolute;
  background: linear-gradient(to bottom, #8ad9e5, #1f86ca);
}

.re_out{
  display: flex;
  justify-content: center;
  margin-top: 10%;
  margin-bottom: 5%;
}

.register{
  color:white;
  font-size:24px;
  font-weight: bold;
}

image{
  height: 100%;
  width: 100%;
  position: absolute;
  background-size: 100% 100%;
  
}
.title{
  position: absolute;
  z-index: 1;
  top:5%;
  font-size: 20px;
  font-weight: 550;
  color: rgb(245, 248, 248);
}

input{
  min-height:35px;
  font-size: 15px;
  font-weight: 500;
  border:1px solid rgb(41, 58, 55);
}


button{
  margin-top: 10%;
  background: -webkit-linear-gradient(left,rgb(53, 139, 238),rgb(76, 115, 221),rgb(53, 139, 238));
  border-radius: 98rpx;
  line-height: 25px;
  font-size: 14px;
  font-weight: 550;
  color: rgb(236, 241, 255);
}


.txt_out{
  display: flex;
  justify-content: center;
  margin-bottom: 5%;
  margin-top: 5%;
}

.txt{
  color: white;
  font-size: 14px;
}

.input_out{
  display: flex;
  justify-content: center;
}

input{
  min-height:35px;
  font-size: 15px;
  font-weight: 500;
  border:1px solid rgb(255, 255, 255);
  border-radius: 3%;
  width: 250px;
}

.input{
  color:#fff;
  text-align: center;
}